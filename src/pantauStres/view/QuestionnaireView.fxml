<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pantauStres.controller.QuestionnaireController">
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
   <children>
      <Label text="Selamat Datang di Assessment Stres" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <Label text="Tes ini akan membantu Anda memahami tingkat stres Anda berdasarkan aktivitas dan perasaan Anda baru-baru ini." textAlignment="CENTER" wrapText="true" />
      <Button fx:id="startButton" onAction="#handleStartAssessment" style="-fx-font-size: 16px;" text="Mulai Assessment Sekarang" />
   </children>
</VBox>