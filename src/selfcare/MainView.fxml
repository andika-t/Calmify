<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="selfcare.controller.MainViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Rutinitas Self-Care Harian">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label fx:id="userNameLabel" text="Pengguna: [Nama Pengguna]">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <Label fx:id="totalPointsLabel" text="Poin: 0">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <Label fx:id="currentLevelLabel" text="Level: Pemula">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <Label text="Pilih aktivitas yang sudah Anda selesaikan:">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <ListView fx:id="activityListView" prefHeight="200.0" prefWidth="200.0" />

        <VBox alignment="TOP_LEFT" spacing="10.0">
            <children>
                <Label text="Manajemen Aktivitas:">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <TextField fx:id="newActivityNameField" promptText="Nama Aktivitas Baru" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="newActivityPointsField" prefWidth="70.0" promptText="Poin" />
                        <Button fx:id="addActivityButton" mnemonicParsing="false" onAction="#handleAddActivity" text="Tambah" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button fx:id="editActivityButton" mnemonicParsing="false" onAction="#handleEditActivity" text="Edit Aktivitas Terpilih" HBox.hgrow="ALWAYS" />
                        <Button fx:id="deleteActivityButton" mnemonicParsing="false" onAction="#handleDeleteActivity" text="Hapus Aktivitas Terpilih" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
