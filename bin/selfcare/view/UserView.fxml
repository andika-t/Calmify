<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="750.0" prefWidth="700.0" spacing="10.0" xmlns="http://javafx.com/javafx/21"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="Selfcare.controller.UserViewController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Profil Pengguna &amp; Rutinitas Self-Care">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Nama Pengguna:" />
            <Label fx:id="userNameLabel" text="[Nama Pengguna]" style="-fx-font-weight: bold;" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Total Poin:" />
            <Label fx:id="totalPointsLabel" text="0" style="-fx-font-weight: bold;" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Level/Badge Anda:" />
            <Label fx:id="currentLevelOrBadgeLabel" text="Newbie"
               style="-fx-font-weight: bold; -fx-text-fill: #007bff;" />
         </children>
      </HBox>
      <VBox spacing="5.0">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <children>
            <Label text="Selesaikan Aktivitas Self-Care (Umum):" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <ComboBox fx:id="activityComboBox" prefWidth="250.0"
                     promptText="Pilih aktivitas..." />
                  <Button fx:id="completeActivityButton" mnemonicParsing="false"
                     onAction="#handleCompleteActivity" text="Tandai Selesai" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox fx:id="notificationContainer" alignment="TOP_CENTER" spacing="5.0">
         <!-- Notifikasi akan ditambahkan di sini secara dinamis -->
      </VBox>
      <Label text="Misi yang Ditugaskan">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TableView fx:id="assignedMissionsTable" prefHeight="150.0" prefWidth="200.0">
         <columns>
            <TableColumn fx:id="colMissionName" prefWidth="200.0" text="Nama Misi" />
            <TableColumn fx:id="colMissionAssignedDate" prefWidth="150.0" text="Tanggal Ditugaskan" />
            <TableColumn fx:id="colMissionStatus" prefWidth="100.0" text="Status" />
            <TableColumn fx:id="colMissionCompletionDate" prefWidth="150.0" text="Tanggal Selesai" />
         </columns>
      </TableView>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button mnemonicParsing="false" onAction="#handleCompleteAssignedMission"
               text="Selesaikan Misi Terpilih" />
         </children>
      </HBox>
      <Label text="Riwayat Poin &amp; Pencapaian">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TableView fx:id="historyTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colHistoryActivity" prefWidth="200.0" text="Aktivitas" />
            <TableColumn fx:id="colHistoryPoints" prefWidth="100.0" text="Poin Didapat" />
            <TableColumn fx:id="colHistoryTimestamp" prefWidth="200.0" text="Waktu Selesai" />
         </columns>
      </TableView>
   </children>
</VBox>