<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="750.0" prefWidth="900.0" spacing="10.0" xmlns="http://javafx.com/javafx/21"
   xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="Selfcare.controller.PsychologistViewController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Manajemen Pengguna (Psikolog)">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <HBox spacing="10.0">
         <children>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Input Pengguna Baru/Edit" />
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Nama Pengguna:" />
                        <TextField fx:id="userNameField" promptText="Masukkan nama pengguna"
                           HBox.hgrow="ALWAYS" />
                     </children>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddUser"
                           text="Tambah Pengguna" />
                        <Button fx:id="updateButton" mnemonicParsing="false"
                           onAction="#handleUpdateUser" text="Perbarui Pengguna" />
                        <Button fx:id="deleteButton" mnemonicParsing="false"
                           onAction="#handleDeleteUser" text="Hapus Pengguna" />
                        <Button fx:id="clearButton" mnemonicParsing="false"
                           onAction="#handleClearInput" text="Bersihkan" />
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <VBox fx:id="leaderboardContainer" alignment="TOP_LEFT" prefWidth="250.0" spacing="5.0"
               style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-border-color: #ccc; -fx-border-radius: 5;">
               <!-- Papan peringkat akan diisi secara dinamis oleh controller -->
               <children>
                  <Label text="Papan Peringkat" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox spacing="5.0">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <children>
            <Label text="Tugaskan Misi kepada Pengguna">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Pilih Pengguna:" />
                  <ComboBox fx:id="assignUserComboBox" prefWidth="200.0" />
                  <Label text="Pilih Aktivitas/Misi:" />
                  <ComboBox fx:id="assignActivityComboBox" prefWidth="200.0" />
                  <Button fx:id="assignMissionButton" mnemonicParsing="false"
                     onAction="#handleAssignMission" text="Tugaskan Misi" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Daftar Pengguna" />
                  <TableView fx:id="userTable" prefHeight="200.0" prefWidth="200.0"
                     VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colUserId" prefWidth="100.0" text="ID Pengguna" />
                        <TableColumn fx:id="colUserName" prefWidth="150.0" text="Nama" />
                        <TableColumn fx:id="colUserPoints" prefWidth="80.0" text="Poin" />
                        <TableColumn fx:id="colUserLevel" prefWidth="120.0" text="Level/Badge" />
                     </columns>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>
            <VBox prefWidth="300.0" spacing="10.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <children>
                  <Label text="Detail Pengguna" />
                  <VBox spacing="5.0"
                     style="-fx-border-color: #ccc; -fx-border-radius: 5; -fx-padding: 10;">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label text="ID:" />
                              <Label fx:id="detailUserIdLabel" text="-" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label text="Nama:" />
                              <Label fx:id="detailUserNameLabel" text="-" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label text="Total Poin:" />
                              <Label fx:id="detailUserPointsLabel" text="-" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label text="Level/Badge:" />
                              <Label fx:id="detailUserLevelLabel" text="-" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <Label text="Riwayat Poin" />
                  <TableView fx:id="historyTable" prefHeight="150.0" prefWidth="200.0">
                     <columns>
                        <TableColumn fx:id="colHistoryActivity" prefWidth="150.0" text="Aktivitas" />
                        <TableColumn fx:id="colHistoryPoints" prefWidth="70.0" text="Poin" />
                        <TableColumn fx:id="colHistoryTimestamp" prefWidth="150.0" text="Waktu" />
                     </columns>
                  </TableView>
                  <Label text="Misi yang Ditugaskan">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TableView fx:id="assignedMissionsTable" prefHeight="150.0" prefWidth="200.0"
                     VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colAssignedMissionName" prefWidth="150.0" text="Misi" />
                        <TableColumn fx:id="colAssignedMissionAssignedDate" prefWidth="120.0"
                           text="Ditugaskan" />
                        <TableColumn fx:id="colAssignedMissionStatus" prefWidth="100.0"
                           text="Status" />
                        <TableColumn fx:id="colAssignedMissionCompletionDate" prefWidth="120.0"
                           text="Selesai Pada" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>